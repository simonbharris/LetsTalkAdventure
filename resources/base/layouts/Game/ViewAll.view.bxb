result-view {
  match {
    Game(result)
  }
  
  render {
    if (size(result) > 1) {
      list-of (result) {
        where-each (item) {
          layout-macro (game-summary) {
            param(game) {
              expression(item)
            }
          }
        }
      }
    }
    else-if (size(result) == 1) {
      layout-macro (game-details) {
        param(game) {
          expression (result)
        }
      }
    }
  }
}